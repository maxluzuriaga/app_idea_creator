var klass;

<% if(error) { %>
	klass = 'error';
<% } else { %>
	klass = 'success';
	$('form input[type=text]').val("");
<% } %>

$('form').addClass(klass);
$('form input[type=text').animate({
	backgroundColor: "#FCFFF5"
}, 1000, function() {
	$('form').removeClass(klass);
	$(this).removeAttr('style');
});

