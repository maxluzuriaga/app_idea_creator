var klass;

<% if(error) { %>
	klass = 'error';
<% } else { %>
	klass = 'success';
	$('form input[type=text]').val("");

	var newCount = parseInt($("#ideas-count span").html()) + 1;
	$("#ideas-count span").html(newCount);
<% } %>

if ($('form.success, form.error').length) {
	$('form input[type=text]').stop();
	$('form input[type=text').removeAttr('style');
}

$('form').attr("class", "group " + klass);

$('form input[type=text').animate({
	backgroundColor: "#FCFFF5"
}, 1000, function() {
	$('form').removeClass(klass);
	$(this).removeAttr('style');
});